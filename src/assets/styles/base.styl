@import "variable.styl"

body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  tap-highlight-color: transparent
  color: $color-text

html, body
  background: $color-background
  height 100%
  min-height 600px
  min-width 1260px

body
  font-size: $font-size-medium

input:-webkit-autofill, textarea:-webkit-autofill, select:-webkit-autofill
  -webkit-box-shadow: 0 0 0px 1000px white inset

#app
  height 100%
  min-height 600px

.h100
  height 100%

.w100
  width 100%

.pr
  position relative

.pa
  position absolute

.fl
  float: left

.fr
  float: right

.flex
  display: flex

.flex-wrap
  flex-wrap: wrap

.flex-item
  flex: 1

.align-center
  align-items: center

.between
  justify-content: space-between

.justify-center
  justify-content: center

.direction-column
  flex-direction: column

.direction-row
  flex-direction: row

// 滚动条
.scroll-bar::-webkit-scrollbar, .ivu-scroll-container::-webkit-scrollbar
  width 6px
  height 5px
.scroll-bar::-webkit-scrollbar-button, .ivu-scroll-container::-webkit-scrollbar-button
  display none
.scroll-bar::-webkit-scrollbar-track, .ivu-scroll-container::-webkit-scrollbar-track
  background #ffffff
.scroll-bar::-webkit-scrollbar-thumb, .ivu-scroll-container::-webkit-scrollbar-thumb
  background #eeeeee
  border-radius 4px

.br:after
  content: ""
  position: absolute
  bottom: 0
  left: 0
  width: 200%
  height: 200%
  transform: scale(0.5, 0.5)
  transform-origin: 0 0
  z-index: 1

.a-br:after
  border: 1px solid #ddd
  top: 0
  z-index: -1

.b-br:after
  height: 0
  bottom: 0
  border-bottom: 1px solid #ddd

.t-br:after
  height: 0
  top: 0
  border-top: 1px solid #ddd

.l-br:after
  width: 0
  left: 0
  border-left: 1px solid #ddd

.r-br:after
  width: 0
  right: 0
  left: auto
  border-right: 1px solid #ddd
  top: 0

.clearfix:after
  content: ''
  height: 0
  width: 0
  display: block
  clear: both
  
.logo
  width 110px

// 间距
.mt12
  margin-top 12px


// 重置Alert, Meaasge样式
.vertical-center-modal
  display flex
  align-items center
  justify-content center
  .ivu-modal
    top 0
.ivu-message-notice-content
  padding 0 !important
  background none !important
  box-shadow none !important
.ivu-message-custom-content
  font-size 16px
  display none
.icon-ivu-message
  font-size 18px

.ivu-alert
  font-size 14px
  padding 10px 40px !important

.ivu-icon-ios-alert
  font-size 16px

// 动画
.voiceSignal
  .line
    animation voiceSignal .6s linear infinite
    &:nth-child(2)
      animation-delay .2s
    &:nth-child(2)
      animation-delay .3s
@keyframes voiceSignal
  from
    width 5px
  to
    width 30px
    
.demo-spin-icon-load
  animation ani-demo-spin 1s linear infinite

@keyframes ani-demo-spin
    from
      transform: rotate(0deg)
    50%
      transform: rotate(180deg)
    to
      transform: rotate(360deg)